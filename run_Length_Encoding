string encode(string src)
{     
    int n = src.length();
    string ans = "";

    for(int i = 0; i < n; i++) {
      int count = 1;
      ans += src[i];
      while(i < n-1 && src[i] == src[i+1]) {
          count++;
          i++;
          
      }
      ans += to_string(count);
        
    }
  return ans;
}     
